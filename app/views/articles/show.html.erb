<div class="tab show">
  <h1>Публикация</h1>
  <ul class="gallerynav">
  	<li><%= link_to 'Просмотреть', article_path(@article) %></li>
    <li><%= link_to 'Редактировать', edit_article_path(@article) %></li>
    <li><%= link_to 'Удалить', article_path(@article),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></li>
  </ul>
	<p>
	  <strong>Title:</strong>
	  <%= @article.title %>
	</p>
	 
	<p>
	  <strong>Text:</strong>
	  <%= @article.text %>
	</p>
</div>