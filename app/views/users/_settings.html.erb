<% if current_user?(@user)%>
	<div class='action-user-profile'>
		<div class="btn-group">
		  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
		  	Настройки профиля <span class="caret"></span>
		 	</button>
		  <ul class="dropdown-menu">
		    <li>
		    	<%= link_to "Изменить", edit_user_path %>
		    </li>
		    <li>
		    	<%= link_to "Удалить", @user, method: :delete, data: { confirm: "Вы уверены?" } %>
		    </li>
		  </ul>
		</div>
	</div>
<% end %>