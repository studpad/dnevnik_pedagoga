<li id="<%= feed_item.id %>">
  <div class='avatar'>
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </div>

  <div class='user-content'>
    <div class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </div>
    <div class='content'><%= feed_item.text %></div>
    <div class="timestamp text-muted"><%= feed_item.created_at %></div>
    <% if current_user?(feed_item.user) %>
      <%= link_to "Удалить", feed_item, method: :delete,
                                       data: { confirm: "Действительно удалить публикацию?" },
                                       title: feed_item.text %>
    <% end %>
  </div>
  <div class='clear'></div>
</li>