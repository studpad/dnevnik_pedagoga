<%= simple_form_for(@article, url: articles_path, html: { class: 'form-vertical' }) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.input :title, placeholder: "Заголовок" %>
    <%= f.text_area :text, placeholder: "Есть чем поделиться? Делитесь!" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>